<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Temperture"
    android:orientation="vertical"
    android:background="#FF9B61"
    
     >
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Select a Conversion"
        android:textSize="30sp"
        android:textStyle="bold|normal" 
        android:paddingBottom="20dp"
        />
     
     
     <TextView 
        android:text="From"
 		android:layout_height="wrap_content"
 		android:layout_width="wrap_content"   
        android:textSize="25sp"
        android:textStyle="bold|normal"
       	android:layout_marginTop="30dp"
        />
     
        <Spinner 
        android:id="@+id/spinner_fromTemp"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
     	android:layout_marginTop="15dp"
        />
    <EditText 
        android:id="@+id/etConvertTempertaure"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Enter the Value"
        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingTop="15dp"
         android:inputType="number"
        />
 
       
       <TextView 
        android:text="To"
 		android:layout_height="wrap_content"
 		android:layout_width="wrap_content"   
        android:textSize="25sp"
        android:textStyle="bold|normal"
        android:paddingTop="15dp"        />
 
    
       <Spinner 
        android:id="@+id/spinner_toTemp"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
     	android:paddingTop="15dp"
         />
 
         <ImageButton 
        android:id="@+id/convertImgButtonTemp"
        android:src="@drawable/convertbutton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        />
      <TextView 
        android:text="Result"
 		android:layout_height="wrap_content"
 		android:layout_width="wrap_content"   
        android:textSize="25sp"
        android:textStyle="bold|normal"
        android:paddingTop="15dp"
       
        />
 
        <fragment 
            android:id="@+id/fragResultTemp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
 			class="com.example.convertor.FragmentResultTemp"   
 			        
            />
    
    
           <ImageView 
     	android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@drawable/aaa"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        />
     
    
</LinearLayout>
